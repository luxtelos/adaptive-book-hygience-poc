# Production Environment Configuration
# Copy this file to .env.production for production deployment

# Logging Configuration (Production Settings)
# Disable logging in production for performance and security
VITE_LOGGING_ENABLED=false

# Only log errors in production
VITE_LOG_LEVEL=ERROR

# Disable debugger statements in production
VITE_ENABLE_DEBUGGER=false

# Disable production logging unless specifically needed for debugging
VITE_PROD_LOGGING=false

# Disable timestamps and colors for production
VITE_LOG_TIMESTAMPS=false
VITE_LOG_COLORS=false

# Production log prefix
VITE_LOG_PREFIX=[BOOK-HYGIENE-PROD]

# QuickBooks API Configuration (Production)
VITE_QBO_PROXY_BASE_URL=https://your-production-proxy-server.com/api
VITE_QBO_REQUEST_TIMEOUT=30000
VITE_QBO_MAX_REQUESTS_PER_MINUTE=450
VITE_QBO_RETRY_DELAY_MS=1000
VITE_QBO_MAX_RETRIES=3
VITE_QBO_POST_LOGIN_REDIRECT=https://yourdomain.com/oauth-callback

# Clerk Authentication (Production)
VITE_CLERK_PUBLISHABLE_KEY=pk_live_your_production_clerk_key_here

# Supabase Configuration (Production)
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_supabase_anon_key_here

# Application Configuration (Production)
VITE_APP_NAME=Adaptive Book Hygiene
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# Analytics and Monitoring (Optional)
VITE_ANALYTICS_ID=your_analytics_id_here
VITE_SENTRY_DSN=your_sentry_dsn_here

# Feature Flags (Production)
VITE_ENABLE_BETA_FEATURES=false
VITE_ENABLE_MAINTENANCE_MODE=false
